{
  "compilerOptions": {
    "outDir": "build/typescript",
    "lib": ["es2015", "dom"],
    "declaration": true,
    "noUnusedLocals": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "alwaysStrict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
