{
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "alwaysStrict": true,
    "noEmit": true
  },
  "include": ["src/**/*"]
}
